<section class="py-2 ">
    <div class="row">
        <div class="col-md-6 text-center">
            <h1 class="display-3 mt-3 pt-5">
                E-Book
            </h1>
            <p class="lead">
                E-book Store
            </p>
            <form action='/charge' method="POST">
                <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
                    data-key="{{stripePublishableKey}}" data-amount="2500" data-name="E-Book" data-description="E-Book"
                    data-image="/img/marketplace.png" data-locale="auto">
                    </script>
                <script>
                    // Hide Default Stripe Button
                    document.getElementsByClassName('stripe-button-el')[0].style.display = 'none'
                </script>
                <button type='submit' class="btn btn-outline-dark text-white btn-lg">
                    Purchase for $25
                </button>
            </form>

        </div>
        <div class="col-md-6">
            <img src="/img/book_img.jpg" alt="book" class="img-fluid">
        </div>
    </div>
</section>